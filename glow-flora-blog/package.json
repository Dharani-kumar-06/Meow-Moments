{
  "name": "glow-flora-blog",
  "version": "1.0.0",
  "description": "A full-stack blog application with React frontend and Node.js backend",
  "main": "glow-flora-blog-backend/server.js",
  "scripts": {
    "start": "cd glow-flora-blog-backend && npm start",
    "install-backend": "cd glow-flora-blog-backend && npm install",
    "install-frontend": "cd glow-flora-blog-frontend && npm install",
    "install-all": "npm run install-backend && npm run install-frontend",
    "start-frontend": "cd glow-flora-blog-frontend && npm start",
    "build-frontend": "cd glow-flora-blog-frontend && npm run build",
    "dev": "concurrently \"npm run start\" \"npm run start-frontend\""
  },
  "keywords": ["blog", "react", "nodejs", "fullstack"],
  "author": "Jameera",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
